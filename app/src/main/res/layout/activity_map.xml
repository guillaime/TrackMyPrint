<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tmp.trackmyprint.mapActivity">


    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@color/colorProfileRectangle"
        android:id="@+id/top"
        android:layout_height="175dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/profileimage"
        android:id="@+id/profile_image"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:layout_constraintLeft_toLeftOf="@+id/top"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:text="Luuk Hermans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/profile_image"
        android:textColor="@android:color/background_light"
        app:layout_constraintRight_toRightOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Last check at 5.15 pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_check_in"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="@+id/profile_name"
        app:layout_constraintRight_toRightOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_width="248dp"
        android:layout_height="33dp"
        app:srcCompat="@drawable/checkin_status"
        android:id="@+id/check_in_status"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintLeft_toLeftOf="@+id/top"
        app:layout_constraintRight_toRightOf="@+id/top" />

    <ImageView
        android:layout_width="318dp"
        android:layout_height="273dp"
        app:srcCompat="@drawable/factory"
        android:id="@+id/factoryImage"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        app:srcCompat="@drawable/printer_solid"
        android:id="@+id/printBtn"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="centerInside"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/factoryImage"
        app:layout_constraintRight_toRightOf="@+id/factoryImage"
        app:layout_constraintTop_toTopOf="@+id/factoryImage"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintVertical_bias="0.76" />

    <ImageButton
        app:srcCompat="@drawable/cutting_solid"
        android:id="@+id/cutBtn"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="centerInside"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/factoryImage"
        app:layout_constraintBottom_toBottomOf="@+id/factoryImage"
        app:layout_constraintRight_toRightOf="@+id/factoryImage"
        app:layout_constraintVertical_bias="0.81"
        app:layout_constraintLeft_toLeftOf="@+id/factoryImage"
        app:layout_constraintHorizontal_bias="0.44" />

    <ImageButton
        app:srcCompat="@drawable/quality_control_solid"
        android:id="@+id/qualityBtn"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="centerInside"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/factoryImage"
        app:layout_constraintBottom_toBottomOf="@+id/factoryImage"
        app:layout_constraintLeft_toLeftOf="@+id/factoryImage"
        app:layout_constraintRight_toRightOf="@+id/factoryImage"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintVertical_bias="0.45" />

    <ImageButton
        app:srcCompat="@drawable/packing_solid"
        android:id="@+id/packagingBtn"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="centerInside"
        android:layout_width="40dp"
        android:layout_height="41dp"
        app:layout_constraintTop_toTopOf="@+id/factoryImage"
        app:layout_constraintBottom_toBottomOf="@+id/factoryImage"
        app:layout_constraintLeft_toLeftOf="@+id/factoryImage"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        app:layout_constraintVertical_bias="0.26" />

    <ImageButton
        app:srcCompat="@drawable/shipped_solid"
        android:id="@+id/shippingBtn"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="centerInside"
        android:layout_height="40dp"
        android:layout_width="41dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        app:layout_constraintVertical_bias="0.060000002" />

    <ImageButton
        app:srcCompat="@drawable/View_on_map"
        android:id="@+id/viewInlistBtn"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:layout_width="141dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/factoryImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button2" />

    <Button
        android:text="Slide to ship"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@drawable/shipBtn"
        android:textColor="@android:color/background_light" />

</android.support.constraint.ConstraintLayout>
