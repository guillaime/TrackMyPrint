<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nfc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tmp.trackmyprint.nfcActivity">


    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@color/colorProfileRectangle"
        android:id="@+id/top"
        android:layout_height="175dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Please leave your phone in the dock if youâ€™ve started the product proccess."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/nfcTextView"
        app:layout_constraintRight_toRightOf="@+id/top"
        app:layout_constraintLeft_toLeftOf="@+id/top"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintTop_toTopOf="@+id/top"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:textAlignment="center"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="201dp"
        android:layout_height="187dp"
        app:srcCompat="@drawable/nfc"
        android:id="@+id/nfcImage"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/top"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.38" />

    <ImageButton
        app:srcCompat="@drawable/startbutton"
        android:id="@+id/startBtn"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="360dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Waiting for start..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nfcImage" />

</android.support.constraint.ConstraintLayout>
